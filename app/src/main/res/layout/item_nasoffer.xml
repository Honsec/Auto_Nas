<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:paddingBottom="12dp"
    android:paddingTop="12dp"
    android:paddingRight="4dp"
    android:id="@+id/id_nas_item_bg"
    android:background="@drawable/bg_item_nas"
    android:paddingLeft="4dp"
    android:gravity="center_vertical"
    android:layout_height="wrap_content">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/id_nas_item_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="8dp"
        />

    <LinearLayout
        android:layout_toRightOf="@+id/id_nas_item_icon"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/id_ns_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="title"
            android:textSize="16sp"
            android:lines="1"
            android:ellipsize="end"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            />
        <TextView
            android:id="@+id/id_ns_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="description"
            android:maxLines="3"
            android:textSize="14sp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/id_ns_item_reward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="8dp"
        android:layout_centerVertical="true"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        />
</LinearLayout>